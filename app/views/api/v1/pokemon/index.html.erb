<div class="result-box">
  <div align="center">
    <h1><%= @pokemon[:name].capitalize %></h1>
  </div>

  <p>Number:<%= @pokemon[:id] %></p>
  <p><%= image_tag "#{@pokemon[:sprites][:front_default]}" %><p>

  <%= form_tag '/api/v1/pokemon', method: :get do %>
    <div align="center" class="poke-search">
      <p>Search for another Pokemon:</p>
      <%= text_field_tag :pokemon %>
      <%= submit_tag "Search" %>
    </div align="center"%>
  <% end %>


</div>